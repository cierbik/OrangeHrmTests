pipeline {
    agent any
    stages {
        stage('Install Cypress') {
            steps {
                script {
                    // Sprawdzamy, czy Cypress jest zainstalowany
                    if (!fileExists('node_modules/cypress')) {
                        powershell 'npm install cypress'  // Instalacja Cypress
                    }
                }
            }
        }
        stage('Run Cypress Tests') {
            steps {
                script {
                    // Uruchomienie testów Cypress
                    powershell 'npx cypress run'
                }
            }
        }
    }
    post {
        always {
            // Możesz dodać krok, aby przechować node_modules w cache
            // Można dodać cache dla node_modules lub innych plików, które nie zmieniają się często
            // Cache node_modules, aby przyspieszyć kolejne uruchomienia
        }
    }
}
