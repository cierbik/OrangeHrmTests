pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Cypress') {
            steps {
                script {
                    // Instalacja Cypress, je≈õli jeszcze nie jest zainstalowany
                    if (!fileExists('node_modules/cypress')) {
                        sh 'npm install cypress'
                    }
                }
            }
        }
        stage('Run Cypress Tests') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
    post {
        always {
            echo 'END!!!'
        }
    }
}
