pipeline {
    agent any
    stages {
        stage('Run Cypress Tests') {
            steps {
                script {
                    // Uruchomienie testów Cypress
                    sh 'npx cypress run'
                }
            }
        }
    }
    post {
        always {
            // Przykład - można dodać więcej działań po zakończeniu testów
            echo 'Tests finished!'
        }
    }
}
